{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/plugin_manifest.schema.json",
  "title": "PluginManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version", "entrypoint", "tools", "min_host_version"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "entrypoint": { "type": "string", "minLength": 1 },
    "min_host_version": { "type": "string", "minLength": 1 },
    "capabilities": {
      "type": "array",
      "items": { "type": "string", "enum": ["fs", "proc", "net", "git"] }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "version", "description", "args_schema", "return_schema", "required_permissions"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "args_schema": { "type": "object" },
          "return_schema": { "type": "object" },
          "required_permissions": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "side_effects": { "type": "boolean" }
        }
      }
    }
  }
}


